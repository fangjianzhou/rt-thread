menuconfig RT_USING_SENSOR
    bool "Using Sensor device drivers"
    select RT_USING_PIN
    default n

if RT_USING_SENSOR
    config RT_USING_SENSOR_CMD
        bool "Using Sensor cmd"
        select PKG_USING_RT_VSNPRINTF_FULL
        default y
endif

config RT_ADC_ROCKCHIP_TSADC
    bool "Rockchip TSADC(thermal) driver"
    depends on RT_USING_DM
    depends on RT_USING_SENSOR
    select RT_MFD_SYSCON
    select RT_USING_RESET
    default n
